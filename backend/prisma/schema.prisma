generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Pdf {
  id            String   @id @default(uuid())
  title         String
  totalPages    Int
  startPage     Int      @default(1)
  endPage       Int
  startDate     DateTime @default(now())
  targetEndDate DateTime
  priority      Int      @default(3) // 1-5 scale
  externalUrl   String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  scheduleEntries ScheduleEntry[]
}

model ScheduleEntry {
  id        String   @id @default(uuid())
  pdfId     String
  date      DateTime
  fromPage Int
  toPage    Int
  status    String   @default("pending") // pending, done, skipped
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  pdf  Pdf  @relation(fields: [pdfId], references: [id], onDelete: Cascade)

  @@index([date])
  @@index([pdfId])
}
